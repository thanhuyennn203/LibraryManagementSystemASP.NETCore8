<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
        }

        #sidebar {
            background-color: #343a40;
            min-height: 100vh;
            color: white;
            position: fixed;
        }

            #sidebar a {
                color: white;
                display: block;
                padding: 10px 20px;
                text-decoration: none;
            }

                #sidebar a:hover {
                    background-color: #495057;
                }

        #main {
            padding: 20px;
            margin-left: 15%;
        }

        #sidebar a.active {
            background-color: #495057;
            font-weight: bold;
        }


    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2" id="sidebar">

                <a asp-controller="Admin" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                    Admin Dashboard
                </a>

                <a asp-controller="Book" asp-action="AdminIndex"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "active" : "")">
                    Book
                </a>

                <a asp-controller="Author" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Author" ? "active" : "")">
                    Author
                </a>

                <a asp-controller="Category" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                    Category
                </a>

                <a asp-controller="User" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")">
                    User
                </a>

                <a asp-controller="Loan" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Loan" ? "active" : "")">
                    Loan
                </a>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10" id="main">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
