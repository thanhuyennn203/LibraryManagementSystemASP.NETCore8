@{
    Layout = "AdminLayout";
}

@model List<LibraryManagementSystem.Models.User>

<div class="user-management container-fluid">
    <h3 class="mb-4">User Management</h3>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center" style="table-layout: fixed; width: 100%;">
            <thead class="table-dark">
                <tr>
                    <th style="width: 80px;">Avatar</th>
                    <th style="width: 80px;">ID</th>
                    <th style="width: 150px;">Full Name</th>
                    <th style="width: 200px;">Description</th>
                    <th style="width: 180px;">Email</th>
                    <th style="width: 120px;">Phone</th>
                    <th style="width: 180px;">Address</th>
                    <th style="width: 100px;">Status</th>
                    <th style="width: 130px;">Created Date</th>
                    <th style="width: 100px;">User Code</th>
                    <th style="width: 100px;">Is Locked</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(user.Avatar))
                            {
                                <img src="/images/@user.Avatar" alt="Avatar" class="img-fluid rounded" style="max-height: 80px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@user.UserId</td>
                        <td>@user.Fullname</td>
                        <td class="text-truncate" style="max-width: 200px;">
                            @(string.IsNullOrEmpty(user.Description) ? "Not available" : user.Description)
                        </td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td class="text-truncate">@user.Address</td>
                        <td>@user.Status</td>
                        <td>@user.CreatedDate?.ToString("yyyy-MM-dd")</td>
                        <td>@user.UserCode</td>
                        <td>@user.IsLocked</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary mb-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Add" class="btn btn-primary">Add</a>
</div>
