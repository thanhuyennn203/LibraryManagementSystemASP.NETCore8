@model LibraryManagementSystem.Models.User
@{
    Layout = "AdminLayout";
}

<div class="container-fluid">

    <h2 class="mb-4">Add User</h2>

    <form asp-action="Add" method="Post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Fullname"></label>
            <input asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="UserCode"></label>
            <input asp-for="UserCode" class="form-control" />
            <span asp-validation-for="UserCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Avatar">Avatar Image Filename (e.g., author.jpg)</label>
            <input asp-for="Avatar" class="form-control" />
            <span asp-validation-for="Avatar" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsLocked" class="form-check-input" />
            <label asp-for="IsLocked" class="form-check-label"></label>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Add User</button>
    </form>

</div>